<li class="dropdown navbar-profile" style="margin-right:5px;">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <span class="meta">
            <span class="avatar" style="display:none"><img src="~/Content/images/@ViewBag.uimg" class="img-circle" alt="admin"></span>
            <span class="text hidden-xs hidden-sm text-muted">@ViewBag.uname</span>
            <span class="caret"></span>
        </span>
    </a>
    <!-- Start dropdown menu -->
    <ul class="dropdown-menu animated flipInX">
        <li class="dropdown-header">个人中心</li>
        <li class="dropdown-header"><a href="#" onclick="CheckPwd()"><i class="fa fa-key"></i>修改密码</a></li>
        
        @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            <li class="dropdown-header">
            @Html.AntiForgeryToken()
                <a href="#" onclick="document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out"></i>注销</a>
            </li>
        }
    </ul>
    <!--/ End dropdown menu -->
</li>
